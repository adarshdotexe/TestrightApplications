<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.amupys.testright.AutoFitTextureView
        android:layout_weight="1"
        android:layout_gravity="center"
        android:id="@+id/textureview_camera"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ISO:"/>
        <EditText
            android:id="@+id/edit_iso"
            android:inputType="number"
            android:minWidth="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:text="EXP:"/>
        <EditText
            android:id="@+id/edit_exp"
            android:inputType="number"
            android:minWidth="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        android:text="FOC:"/>
        <EditText
            android:id="@+id/edit_foc"
            android:inputType="numberDecimal"
            android:minWidth="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R:"/>
        <EditText
            android:id="@+id/r"
            android:inputType="numberDecimal"

            android:minWidth="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:text="G_ODD:"/>
        <EditText
            android:id="@+id/g0"
            android:inputType="numberDecimal"
            android:minWidth="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G_EVEN:"/>
        <EditText
            android:id="@+id/g1"
            android:inputType="numberDecimal"
            android:layout_width="wrap_content"
            android:minWidth="40dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B:"/>
        <EditText
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:minWidth="40dp"
            android:inputType="numberDecimal"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exposure" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/autoexp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_focus" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/autofocus"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_whitebalance" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/awb"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/button_back"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="Capture"
            android:id="@+id/button_capture"/>

        <Button
            android:id="@+id/auto_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOAD"/>

    </LinearLayout>



</LinearLayout>